


<div class="container fullscreen">
  <div class="row">
    <div class="col-xs12 col-sm-6 col-sm-offset-3">

      <div class="form-login home-navbar-margin">
        <% if current_user.organizer %>
          <h1>New Event</h1>

          <%= simple_form_for [@organizer, @event] do |f| %>
            <%= f.input :event_name, placeholder: "La Bohème", label: "Event Name" %>
            <%= f.input :event_category, collection: ["Theater", "Concert", "Opera/Operette"], prompt: "Theater? Concert? Opera/Operette?" %>
            <%= f.input :event_description, placeholder: "Describe the event", label: "Event Description" %>
            <%= f.input :event_address_title, placeholder: "Gemeinhaus Hinterpfufikon" , label: "Address Title" %>
            <%= f.input :event_address_street, placeholder: "Hotzestrasse 29" , label: "Street" %>
            <%= f.input :event_address_postalcode, placeholder: "8006", label: "Postal Code"  %>
            <%= f.input :event_address_city, placeholder: "Zürich", label: "City" %>
            <%= f.input :date %>
            <%= f.input :event_time %>
            <%= f.input :event_link, placeholder: "https://www.sponticus.ch"%>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.input :initial_added_tickets, as: :radio_buttons, label: "Would you like to add Sponti Tickets to this Event?"  %>
            <%= f.submit "Add Sponti Event", class: "btn btn-primary" %>
          <% end %>


        <br>
      <%else%>
      <p>In order to register an event, you have have an Organizer Account.</p>
      <p> How can you sign up as Organizer?</p>
      <p>Just click on the list and turn your account int an organizer-account</p>
      <%= link_to "Become an Organizer", new_organizer_path%>
      <%end%>
      </div>
    </div>
  </div>
</div>

