
<%pic = "concert_hall.jpeg"%>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_path(pic)%>);">
  <div class="banner-content">

    <h1>Be Sponti! Find an Event</h1>
      <div class="search-form">
        <%= simple_form_for :event_search, url: events_path, method: :get, html: {class: 'form-inline'} do |f| %>
          <%= f.input :event_name, placeholder: "Search for Event Name", label: false, input_html: {class: 'search-input'} %>
          <%= f.input :event_category, prompt: "Search for Category", label: false, collection: @categories, input_html: {class: 'search-input'}%>
          <%= f.input :event_date, as: :string, label: false, input_html: {type: :date, class: 'search-input'}, placeholder: "Search for Date"%>
          <%= f.submit "Find", class:"btn btn-primary" %>
        <% end %>
      </div>

  </div>
</div>

<!-- cards of todays events -->

<div class="home-events-wrapper">
  <div class="container">


      <%if @events.empty?%>
        <p>There are no Events coming up </p>
      <% else %>
    <div class="row">
      <h2 style="padding-left: 20px">The 3 soonest events coming up</h2>
        <% @closest_events[0...3].each do |event| %>
        <!-- **** to determine the picture that will be shown *** -->
          <%if event.photo?%>
            <%photo = event.photo%>
          <%else%>
            <%if event.event_category == "Concert"%>
              <%photo = "band.jpg"%>
            <%elsif event.event_category == "Theater"%>
              <%photo = "play.jpg"%>
            <%else%>
              <%photo = "opera.jpg"%>
            <%end%>
          <%end%>
        <!-- ****  *** -->

          <div class="col-xs-12 col-sm-4">

            <!-- <div class="card"> -->
              <%#= image_tag(photo, height: "100%", width: "100%")  %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=image_path(photo)%>);">
              <div class="card-category">
                <% if event.tickets.empty?%>
                  No Tix for sale
                <% else %>
                  CHF <%= event.tickets.last.price %>
                <% end %>
              </div>
              <div class="card-description">
                <h2 class="white"><%=event.event_name%></h2>

              </div>
              <%=link_to "", event_path(event), class:"card-link" %>
            </div>


            <div class="detail-box">
              <div class="calendar-box">
                <div class="calendar-month">
                  <p class="no-margin white"><%=event.date.strftime("%B").first(3)%></p>
                </div>
                <div class="calendar-day">
                  <p style="margin: 5px 0px 0px 0px;"><%=event.date.strftime("%02d")%></p>
                </div>
              </div>

              <div class="event-local-box">
                <div class="upercase ">
                <p class="bold" style="margin-bottom: 0;"><%= event.organizer.organizer_name%></p>
                </div>
                <div class="">
                  <i class="fa fa-clock-o color-grey" style="padding-right: 2px;">
                    <span><%= event.event_time.strftime("%H")%>h</span>
                  </i>
                  <i class="fa fa-map-marker color-grey" style="padding: 0 2px 0 4px;">
                      <span><%= event.event_address_city%></span>
                  </i>
                </div>
              </div>

            </div>

          </div>
        <% end %>
      <% end %>
    </div>

    <div style="text-align: center; padding-top: 20px;">
     <%= link_to "See all Events", events_path, class: "btn btn-success"%>
    </div>

  </div>
</div>
