<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Sign up as an organizer</h1>
          <%= simple_form_for [@organizer] do |f| %>
            <%= f.input :organizer_name, placeholder: "Operettenbühne Hombrechtikon", label: "Organizer Name" %>

            <%= f.input :organizer_address_street, placeholder: "Felsenegg 29", label: "Street / Number" %>
            <%= f.input :organizer_address_postalcode, placeholder: "8008" , label: "Postal Code" %>
            <%= f.input :organizer_address_city, placeholder: "Zürich" , label: "City" %>
            <%= f.submit "Signup", class: "btn btn-primary" %>
          <% end %>
        <br>
    </div>
  </div>ß
</div>
